                <br>
            <input type="radio" id="pwm5" name="io" value="5" checked>
                <label for="pwm2"> io 5</label>

            div(class="slidecontainer")
                input(type="range", min="1" ,max="255" ,value="50" ,class="slider" ,id="duty", name="value")
                span(id="displayPWM")
                
            input(type='submit', value='    set duty    ',style="width: auto;background-color: black")


            script. 
                var slider = document.getElementById("duty");
                var output = document.getElementById("displayPWM");
                output.innerHTML = slider.value;

                slider.oninput = function() {
                output.innerHTML = this.value;
                }

