extends layouts/authentication.pug
<meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests"> 
block content
    .container
        .row.justify-content-center
            .col-lg-7
                .card.shadow-lg.border-0.rounded-lg.mt-5
                    .card-header
                        h3.text-center.font-weight-light.my-4 Create Account
                    .card-body
                        form
                            .form-group
                                label.small.mb-1(for='a_email') Email
                                input#a_email.form-control.py-4(type='email', aria-describedby='emailHelp', placeholder='Enter email address')
                            .form-row
                                .col-md-6
                                    .form-group
                                        label.small.mb-1(for='a_pass') Password
                                        input#a_pass.form-control.py-4(type='password', placeholder='Enter password')
                                .col-md-6
                                    .form-group
                                        label.small.mb-1(for='a_confirm_pass') Confirm Password
                                        input#a_confirm_pass.form-control.py-4(type='password', placeholder='Confirm password')
                            .form-group.mt-4.mb-0
                                a.btn.btn-primary.btn-block(type='submit',id="regis",name="regis") Create Account
                        script(src="/javascripts/register.js")
                    .card-footer.text-center
                        .small
                            a(href='/login') Have an account? Go to login
