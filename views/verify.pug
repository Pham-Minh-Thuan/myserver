extends layouts/authentication.pug
block css
    link(href='/stylesheets/my_styles.css', rel='stylesheet')
link(rel="icon" , type="image/png", href="/images/icon.png")
block meta
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description', content='')
    meta(name='author', content='')
    meta(http-equiv="Content-Security-Policy" content="upgrade-insecure-requests")
block scripts
    //- Load jQuery
    script(src='https://code.jquery.com/jquery-3.4.1.min.js', crossorigin='anonymous')
    //- Load Bootstrap JS Bundle
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js', crossorigin='anonymous')
    //- Load Global Template Scripts
    script(src='/javascripts/scripts.js')

block content
    .container
        .row.justify-content-center
            .col-lg-5
                .card.shadow-lg.border-0.rounded-lg.mt-5
                    .card-header
                        h3.text-center.font-weight-light.my-4 Veryfi special number
                        h6(id="status",style="color: red;")
                    .card-body
                        form
                            .form-group
                                label.small.mb-1(for='email') Email
                                input#email.form-control.py-4(type='email', placeholder='Enter email address')
                            .form-group
                                label.small.mb-1(for='number') Special number
                                input#number.form-control.py-4(type='password', placeholder='Enter special number')
                            .form-group.d-flex.align-items-center.justify-content-between.mt-4.mb-0
                                a.btn.btn-primary(type='submit',id="verify",name="verify") Verify

                        script(src="/javascripts/verify_number.js")
                    .card-footer.text-center
                        .small
                            a(href='/forgetpass') Don't receive number, try again
