extends layouts/authentication.pug

block content
    .container
        .row.justify-content-center
            .col-lg-5
                .card.shadow-lg.border-0.rounded-lg.mt-5
                    .card-header
                        h3.text-center.font-weight-light.my-4 Login
                        h5(id="status")
                    .card-body
                        form
                            .form-group
                                label.small.mb-1(for='email') Email
                                input#email.form-control.py-4(type='email', placeholder='Enter email address')
                            .form-group
                                label.small.mb-1(for='pass') Password
                                input#pass.form-control.py-4(type='password', placeholder='Enter password')
                            .form-group.d-flex.align-items-center.justify-content-between.mt-4.mb-0
                                a.btn.btn-primary(type='submit',id="login",name="login") Login

                        script(src="/javascripts/login.js")
                    .card-footer.text-center
                        .small
                            a(href='/register') Need an account? Sign up!
